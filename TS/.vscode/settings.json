{
    "restoreTerminals.terminals": [
        {
            "splitTerminals": [
                {
                    "name": "Run",
                    "commands": [
                        "npm run watch"
                    ]
                },
                {
                    "name": "Test",
                    "commands": [
                        "npm test",
                    ]
                }
            ]
        },
        {
            "splitTerminals": [
                {
                    "name": "VM",
                    "commands": [
                        "cd VM",
                        "nodemon -e c,h,tsc --exec powershell -Command ./run.ps1",
                    ]
                },
                {
                    "name": "Git",
                },
            ]
        }
    ],
    "restoreTerminals.runOnStartup": true,
    "eslint.validate": [
        "typescript",
    ],
}